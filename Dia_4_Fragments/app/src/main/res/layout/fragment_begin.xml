<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BeginFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Welcome, Agu!"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textSize="40sp"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_main_title"
        app:layout_constraintBottom_toTopOf="@id/tv_main_centerInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text="Nice to see you"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tv_main_centerInfo"
        app:layout_constraintBottom_toTopOf="@id/btn_begin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:text="@string/tv_main_centerText"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textSize="20sp"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="10dp"
        android:text="Begin"
        android:background="@drawable/btn_custom_style"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_main_bottomInfo"/>

    <TextView
        android:id="@+id/tv_main_bottomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:text="Join over 22k other people who are already using our exercise plans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>